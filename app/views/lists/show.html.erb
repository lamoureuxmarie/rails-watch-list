<h1><%= @list.name %></h1>

<div class="d-flex">

  <% @list.bookmarks.each do |bookmark| %>
    <div class="card p-3 m-2" style="width: 18rem;">
      <%= image_tag bookmark.movie.poster_url, alt: "poster" %>
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><%= bookmark.movie.overview %></p>
        <em><%= "'#{bookmark.comment}'" %></em>
        <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to remove this movie?' } do %>
            <p class="x-btn">X</p>
      <% end %>
      </div>
    </div>
  <% end %>

</div>


<%= link_to 'Add a movie', new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to 'Back to homepage', lists_path, class: "btn btn-secondary" %>
